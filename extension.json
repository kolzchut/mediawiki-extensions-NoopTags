{
	"name": "NoopTags",
	"version": "0.0.1",
	"author": [
		"Dror S. [FFS] ([http://www.kolzchut.org.il Kol-Zchut])"
	],
	"url": "https://github.com/kolzchut/mediawiki-extensions-NoopTags",
	"descriptionmsg": "nooptags-desc",
	"license-name": "GPL-2.0-or-later",
	"type": "parserhook",
	"requires": {
		"MediaWiki": ">= 1.35.0"
	},
	"AutoloadClasses": {
		"MediaWiki\\Extension\\NoopTags\\Hooks": "includes/Hooks.php"
	},
	"Hooks": {
		"ParserFirstCallInit": "handleHooks",
		"GetMagicVariableIDs": "handleHooks"
	},
	"HookHandlers": {
		"handleHooks": {
			"class": "MediaWiki\\Extension\\NoopTags\\Hooks"
		}
	},
	"config": {
		"NoopTagsBlacklist": {
			"value": [
				"blogposts"
			],
			"description": "An array of tags to register and make noop"
		},
		"NoopTagsFunctionBlacklist": {
			"value": [
				"ev",
				"evt"
			],
			"description": "An array of parser function to register and make noop"
		}
	},
	"MessagesDirs": {
		"NoopTags": [
			"i18n"
		]
	},
	"ExtensionMessagesFiles": {
		"NoopTagsMagic": "NoopTags.i18n.magic.php"
	},
	"manifest_version": 2
}
